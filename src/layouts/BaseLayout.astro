---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AudioPlayer from '../components/AudioPlayer.vue';
const props = Astro.props
---

<html lang="ja" class="dark">
	<head>
		<BaseHead title={props.title} description={props.description} />
	</head>

	<body class={`prose dark:prose-invert bg-gray-100 dark:bg-gray-900 max-w-none ${props.bgImage} bg-cover bg-center min-h-dvh flex jusity-start flex-col`}>
		<Header />
		
			<main class="grow container py-12">
				<article>
					<slot />
				</article>
			</main>
			
			<AudioPlayer client:load />
	</body>
</html>
