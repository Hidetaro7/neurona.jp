---
import RootLayout from '@/layouts/RootLayout.astro';
import { getArticles } from '@/lib/microcms';
import type { Article } from '@/lib/types';
import { formatDate } from '@/utils/dateFormatter';
import Breadcrumbs from '@/components/Breadcrumbs.astro';

const title = 'ニューロナ - 記事一覧';
const description = 'ニューロナの記事一覧ページ';
const thumbnail = '/image/ogp_image.png';

// Fetch articles data from microCMS with error handling
let articles: Article[] = [];
let hasError = false;

try {
  articles = await getArticles();
  // Sort articles by publishedAt date (newest first)
  articles.sort((a, b) => {
    const dateA = new Date(a.publishedAt);
  const dateB = new Date(b.publishedAt);
  return dateB.getTime() - dateA.getTime();
});
// Only show schedule articles
articles = articles.filter((article) => article.type?.includes('schedule'));
} catch (error) {
  console.error('Failed to fetch articles from microCMS:', error);
  hasError = true;
}

---

<RootLayout {title} {description} {thumbnail}>
  <div class="page-container">
    <div class="page-header">
      <Breadcrumbs items={[{ label: 'Home', href: '/' }, { label: 'News' }]} />
      <h1 class="page-title">記事一覧</h1>
    </div>

    {hasError ? (
      <div class="text-center py-16">
        <p class="text-gray-500 text-lg">データの取得に失敗しました。</p>
      </div>
    ) : articles.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {articles.map((article) => (
          <article class="jumpu-card">
            <a href={`/articles/${article.permalink}`} class="block">
              {article.thumbnail && (
                <div class="aspect-video bg-gray-200 overflow-hidden">
                  <img
                    src={article.thumbnail.url}
                    alt={article.title}
                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                </div>
              )}
              <div class="p-4">
                <div class="mb-2">
                  {article.type && article.type.length > 0 && (
                    <span class="inline-flex rounded-full py-1 px-3 border border-gray-300 text-xs">
                      {article.type.join(', ')}
                    </span>
                  )}
                </div>
                <h2 class="text-lg font-bold mb-2 line-clamp-2 hover:text-fuchsia-700 transition-colors">
                  {article.title}
                </h2>
                <p class="text-sm text-gray-500">
                  <i class="far fa-calendar-alt mr-1"></i>
                  {formatDate(article.publishedAt)}
                </p>
              </div>
            </a>
          </article>
        ))}
      </div>
    ) : (
      <div class="text-center py-16">
        <p class="text-gray-500 text-lg">現在、記事はありません。</p>
      </div>
    )}
  </div>
</RootLayout>
