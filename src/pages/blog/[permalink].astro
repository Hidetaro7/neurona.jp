---
import { getBlogs, getBlogByPermalink } from "../../library/microcms";

// 詳細記事ページの全パスを取得
export async function getStaticPaths() {
  const response = await getBlogs({ fields: ["permalink"] });
  return response.contents.map((content: any) => ({
    params: {
      permalink: content.permalink,
    },
  }));
}

//記事の詳細情報を取得
const { permalink } = Astro.params;
const blog = await getBlogByPermalink(permalink);
const article = blog.contents[0];

---


<html lang="ja">
	<head>
		<meta charset="utf-8">
	</head>

	<body>
		<main>
     
    <h1 class="title">{article.title}</h1>
    <p class="publishedAt">公開日時：{blog.publishedAt}</p>
    <div class="post" set:html={article.content}></div>
  </main>
	</body>
</html>
