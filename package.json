{
  "name": "website-boilerplate",
  "description": "a boilerplate of website provided with npm scripts",
  "version": "2.0.0",
  "author": "tuqulore inc.",
  "bugs": {
    "url": "https://github.com/tuqulore/website-boilerplate/issues"
  },
  "dependencies": {
    "serve-handler": "^6.1.3"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-img": "^2.0.0",
    "@jumpu-ui/tailwindcss": "^1.0.1-alpha.2",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.2",
    "@mightyplow/eleventy-plugin-cache-buster": "^1.1.3",
    "node-html-parser":"^5.3.3",
    "autoprefixer": "^10.4.4",
    "cachekill": "^3.0.2",
    "dotenv":"^16.0.0",
    "cssnano": "^5.1.5",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-formatter-rdjson": "^1.0.5",
    "globby": "^11.0.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "postcss-import": "^14.1.0",
    "postcss-load-config": "^3.1.4",
    "postcss-mixins": "^9.0.2",
    "prettier": "^2.2.1",
    "prettier-plugin-md-nocjsp": "^1.0.2",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.23",
    "textlint": "^11.9.1",
    "textlint-plugin-html": "^0.2.0",
    "textlint-rule-preset-japanese": "^6.0.1"
  },
  "homepage": "https://github.com/tuqulore/website-boilerplate#readme",
  "keywords": [
    "website"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tuqulore/website-boilerplate.git"
  },
  "scripts": {
    "build": "NODE_ENV=production run-s clean build:eleventy build:cachekill",
    "build:cachekill": "cachekill -r -s 'dist/**/!(*.{html,pdf})' -t 'dist/**/*.{js,css,html}'",
    "build:eleventy": "eleventy",
    "clean": "rimraf dist",
    "dev": "run-p dev:*",
    "dev:eleventy": "eleventy --serve",
    "fix": "run-s fix:*",
    "fix:eslint": "eslint --fix .",
    "fix:textlint": "textlint --fix .",
    "format": "run-s fix:* format:prettier",
    "format:prettier": "prettier -w '**/*.{js,json,md,njk,scss,yaml,yml}'",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint .",
    "lint:rdjson": "eslint --format rdjson .",
    "lint:textlint": "textlint ."
  }
}
